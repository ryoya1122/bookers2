<div class="container">
<div class="row">
	<% if flash[:notice] %>
	<p id=notice><%= flash[:notice] %></p>
<% end %>
<%= render 'layouts/userpage', {user: @user, book: @book} %>
<div class="col-xs-9">
	<h2>Followers</h2>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th>フォロー</th>
			<th>フォロワー</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @followers.each do |follower| %>
		<tr>
			<td><%= link_to attachment_image_tag(follower, :profile_image,  format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40'), user_path(follower) %></td>
			<td><%= follower.name %></td>
			<td><%= follower.followings.count %></td>
			<td><%= follower.followers.count %></td>
			<td><%= link_to "Show", user_path(follower) %></td>
		</tr>
<% end %>
	</tbody>
</table>
</div>
</div>
</div>