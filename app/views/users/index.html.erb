
<div class="container">
	<div class="row">
		<% if flash[:notice] %>
	<p id=notice><%= flash[:notice] %></p>
<% end %>
<%= render 'layouts/mypageuser', user: @user, book: @book %>
<div class="col-xs-9">
	<h2>Users</h2>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th>フォロー</th>
			<th>フォロワー</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to attachment_image_tag(user, :profile_image,  format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: '40x40'), user_path(user) %></td>
			<td><%= user.name %></td>
			<td><%= user.followings.count %></td>
			<td><%= user.followers.count %></td>
			<td><%= link_to "Show", user_path(user) %></td>
		</tr>
	<% end %>
	</tbody>
</table>
</div>
</div>
</div>