<div class="container">
  <div class="row">

<%= render 'layouts/mypagebook', {user: @user, book: @book} %>
<div class="col-xs-9">
  <h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"), book_path(book) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% if flash[:notice] %>
  <p id=notice><%= flash[:notice] %></p>
<% end %>
</div>
</div>