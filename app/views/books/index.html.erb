
<div class="container">
  <div class="row">
<% if flash[:notice] %>
  <p id=notice><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"%>
  <table class="table">
    <tbody>
      <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
        <div class="row">
      <div class="col-xs-12">
        <%= link_to "", edit_user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench btn-block" %>
      </div>
  </div>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <div class="form-group row">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title, class:'col-xs-12' %>
  </div>
  <div class="form-group row">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body, class:'col-xs-12' %>
  </div>
  <div class="actions row">
    <%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>
  </div>
<% end %>
</div>
<div class="col-xs-9">
  <h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40'), user_path(book.user) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% if flash[:notice] %>
  <p id=notice><%= flash[:notice] %></p>
<% end %>
</div>
</div>